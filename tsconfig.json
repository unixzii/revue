{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "jsx": "react-jsx",
        "outDir": "./dist",
        "baseUrl": "./src",
    }
}
